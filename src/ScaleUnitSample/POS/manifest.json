{
  "$schema": "./devDependencies/schemas/manifestSchema.json",
  "name": "Contoso.Commerce",
  "publisher": "Contoso",
  "version": "1.0.0",
  "minimumPosVersion": "9.29.0.0",
  "description": "An extension package that makes use of a Retail Server extension. Also works off-line.",
  "dependencies": [
    {
      "alias": "knockout",
      "format": "amd",
      "modulePath": "Libraries/knockout"
    }
  ],
  "components": {
    "resources": {
      "supportedUICultures": [ "en-US" ],
      "fallbackUICulture": "en-US",
      "culturesDirectoryPath": "Resources/Strings",
      "stringResourcesFileName": "resources.resjson"
    },
    "extend": {
      "views": {
        "SearchView": {
          "productAppBarCommands": [
            { "modulePath": "ViewExtensions/Search/NavigateToExampleViewCommand" }
          ]
        }
      },
      "triggers": [
        {
          "triggerType": "ApplicationStart",
          "modulePath": "Trigger/ApplicationStartTrigger"
        }
      ]
    },
    "create": {
      "templatedDialogs": [
        {
          "htmlPath": "Controls/Dialogs/Create/ExampleCreateDialog.html",
          "modulePath": "Controls/Dialogs/Create/ExampleCreateDialogModule"
        },
        {
          "htmlPath": "Controls/Dialogs/Edit/ExampleEditDialog.html",
          "modulePath": "Controls/Dialogs/Edit/ExampleEditDialogModule"
        },
        {
          "htmlPath": "Controls/Dialogs/Display/PingResultDialog.html",
          "modulePath": "Controls/Dialogs/Display/PingResultDialogModule"
        },
        {
          "htmlPath": "StoreHoursSample/Controls/Dialogs/StoreHoursDialog.html",
          "modulePath": "StoreHoursSample/Controls/Dialogs/StoreHoursDialogModule"
        }
      ],
      "views": [
        {
          "title": "Sample Extension View",
          "pageName": "ExampleView",
          "phonePageName": "ExampleView",
          "viewDirectory": "Views/",
          "viewControllerPath": "Views/ExampleView"
        },
        {
          "title": "Store Hours View",
          "pageName": "StoreHoursView",
          "phonePageName": "StoreHoursView",
          "viewDirectory": "StoreHoursSample/Views/",
          "viewControllerPath": "StoreHoursSample/Views/StoreHoursView"
        }
      ],
      "operations": [
        {
          "operationId": "10001",
          "operationRequestFactoryPath": "StoreHoursSample/Operations/StoreHours/StoreHoursOperationRequestFactory",
          "operationRequestHandlerPath": "StoreHoursSample/Operations/StoreHours/StoreHoursOperationRequestHandler"
        }
      ]
    }
  }
}
